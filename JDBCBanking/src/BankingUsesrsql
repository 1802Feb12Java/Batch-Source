CREATE TABLE USERS_PERSONAL(

    USERID PRIMARY KEY,
    FULLNAME VARCHAR2,
    PHONE VARCHAR2,
    AGE INT,
    BIRTHDATE VARCHAR2);
    
CREATE TABLE USERS_ACCOUNT(

    USERID PRIMARY KEY,
    ACCOUNTNUM  INT,
    FULLNAME VARCHAR2,
    USERNAME VARCHAR2,
    PASS_WORD VARCHAR2,
    BALANCE INTEGER,
    JOINT BOOLEAN);
