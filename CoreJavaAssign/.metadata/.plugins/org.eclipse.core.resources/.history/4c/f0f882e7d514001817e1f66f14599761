package com.revature.core.java;

import java.util.ArrayList;

/**
 * 
 * @author Johne Vang
 *	Q9. Create an ArrayList which stores numbers from 1 to 100 
 *	and prints out all the prime numbers to the console.
 */
public class Q9_PrimeNumbers {

	public static void main(String[] args) {
		
		/*
		 * 
		 */
		ArrayList<Integer> intList = new ArrayList<Integer>();
		for(int i = 1 ; i <= 100; i++) {
			intList.add(i);
		}
		
		for(Integer i : intList) {
			if(isPrime(i)) {
				System.out.println(i);
			}
		}
	}//end of main
	
	/**
	 * As long as the factors is <= the sqrt(num), check if num is 
	 * divisble by its factors all the way to itself.
	 * 
	 * @param num
	 * @return
	 */
	public static boolean isPrime(int num) {
		boolean isPrime = true;
		
		for(int factor = 2; factor <= Math.sqrt(num); factor++) {
			if(num % factor == 0) {
				isPrime = false;
			}
		}
		return isPrime;
	}//end of isPrime
}//end of class
