package com.revature.core.java;

import java.util.ArrayList;
import java.util.Scanner;

/**
 * 
 * @author Johne Vang
 * Q7. Sort two employees based on their name, department, and age using the Comparator interface.
 */
public class Q7_Employees {

	private String name;
	private String dept;
	private int age;
	
	public Q7_Employees() {}
	
	public Q7_Employees(String name, String dept, int age) {
		this.name = name;
		this.dept = dept;
		this.age = age;
	}

	/**
	 * @return the name
	 */
	public String getName() {
		return name;
	}



	/**
	 * @param name the name to set
	 */
	public void setName(String name) {
		this.name = name;
	}



	/**
	 * @return the dept
	 */
	public String getDept() {
		return dept;
	}



	/**
	 * @param dept the dept to set
	 */
	public void setDept(String dept) {
		this.dept = dept;
	}



	/**
	 * @return the age
	 */
	public int getAge() {
		return age;
	}



	/**
	 * @param age the age to set
	 */
	public void setAge(int age) {
		this.age = age;
	}


	/* (non-Javadoc)
	 * @see java.lang.Object#toString()
	 */
	@Override
	public String toString() {
		return "Q7_Employees [name=" + name + ", dept=" + dept + ", age=" + age + "]";
	}

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		Q7_Employees michael = new Q7_Employees("Michael", "Manager", 45);
		Q7_Employees dwight = new Q7_Employees("Dwight", "assistant", 43);
		
		ArrayList<Q7_Employees> employeesList = new ArrayList<Q7_Employees>();
		employeesList.add(e1);
		employeesList.add(e2);
		
		/*
		 * loop through each element of employeesList, and prompt user for input
		 */
		

	}

}	//end of class
