package com.revature.core.java;

import java.util.ArrayList;
import java.util.Comparator;
import java.util.Scanner;

/**
 * 
 * @author Johne Vang
 * Q7. Sort two employees based on their name, department, and age using the Comparator interface.
 * 
 * source1: https://www.geeksforgeeks.org/comparator-interface-java/
 * source2: https://docs.oracle.com/javase/8/docs/api/java/util/Comparator.html
 */
public class Q7_Employees implements Comparator<Q7_Employees>{

	private String name, dept;
	private int age;
	
	public Q7_Employees() {}
	
	public Q7_Employees(String name, String dept, int age) {
		this.name = name;
		this.dept = dept;
		this.age = age;
	}

	/**
	 * @return the name
	 */
	public String getName() {
		return name;
	}



	/**
	 * @param name the name to set
	 */
	public void setName(String name) {
		this.name = name;
	}



	/**
	 * @return the dept
	 */
	public String getDept() {
		return dept;
	}



	/**
	 * @param dept the dept to set
	 */
	public void setDept(String dept) {
		this.dept = dept;
	}



	/**
	 * @return the age
	 */
	public int getAge() {
		return age;
	}



	/**
	 * @param age the age to set
	 */
	public void setAge(int age) {
		this.age = age;
	}

	

	/* (non-Javadoc)
	 * @see java.lang.Object#toString()
	 */
	@Override
	public String toString() {
		return "Q7_Employees [name=" + name + ", dept=" + dept + ", age=" + age + "]";
	}
	
	@Override
	public int compare(Q7_Employees e1, Q7_Employees e2) {
		return e1.getAge() - e2.getAge();
	}
	
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		Q7_Employees michael = new Q7_Employees("Michael", "Regional Manager", 45);
		Q7_Employees dwight = new Q7_Employees("Dwight", "Assistant to the Regional Manager", 43);
		
		ArrayList<Q7_Employees> employeesList = new ArrayList<Q7_Employees>();
		employeesList.add(michael);
		employeesList.add(dwight);
		
		/*
		 * loop through each element of employeesList, and prompt user for input
		 */
		System.out.println();

	}	//end of main
}	//end of class
