<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  
  <context-param>
    <param-name>favoriteColor</param-name>
    <param-value>blue</param-value>
  </context-param>
  
  <context-param>
    <param-name>sport</param-name>
    <param-value>lacrosse</param-value>
  </context-param>
  
  <servlet>
    <servlet-name>test</servlet-name>
    <servlet-class>com.ex.servlet.TestServlet</servlet-class>
    
    <init-param>
      <param-name>param1</param-name>
      <param-value>value1</param-value>
    </init-param>
    
    <init-param>
      <param-name>animal</param-name>
      <param-value>dog</param-value>
    </init-param>
    
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  
  
  <servlet-mapping>
    <servlet-name>test</servlet-name>
    <url-pattern>/paramExample</url-pattern>
  </servlet-mapping>
  
  
</web-app>