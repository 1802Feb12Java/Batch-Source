package com.revature;

public class Q10 {
	public void run() {
		double[] numArr = {0.457, 5.78345, 10.4516, 1.645132, 4.651, 9.1237, 3.119, 7.546, 8.789};
		
		int result;
		for(int i=0; i<numArr.length-1; i++) {	//go through the array in order
			result = findMin(numArr[i], numArr[i+1]);	//call the ternary
			if(result == -1) {	//if the ternary says it was less
				System.out.println(numArr[i] + " vs " + numArr[i+1] + ": " + numArr[i]);
			}
			else if(result == 1) {	//if ternary says it was more or equal
				System.out.println(numArr[i] + " vs " + numArr[i+1] + ": " + numArr[i+1]);
			}
			else {	//if it didn't return one of the two possible from the ternary
				System.out.println("WHAT HAVE YOU DONE");	//panic
			}
		}
	}
	
	public int findMin(double a, double b) {
		return a<=b ? -1:1;	//here's the ternary
	}
}
