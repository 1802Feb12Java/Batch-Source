package com.revature;

public class Q6 {
	public void run() {
		System.out.println(isEven(126));
	}
	
	public boolean isEven(int i) {
		while(i>=2) {
			i /= 2;	//divide i by 2
			if(i==1) {	//because if u divide 1 by 2 it'll do 1/2, which in int would round down to 0
				return false;
			}
			else if(i==2) {	//because 2/2 will give 1
				return true;
			}
			//otherwise keep going in the loop
		}
		return true;
	}
}
