package com.revature;

public class Q16 {
	public void run(String[] input) {
		int inputLength = 0;
		for(String s : input) {
			inputLength += s.length();	//go through the array, add up all the string lengths
		}
		if(inputLength == 0) {
			System.out.println("in eclipse, chose Run -> Run configuration -> this Driver class -> arguments -> \n" + 
					"			//type in whatever you want to do command line arguments. \n" + 
					"			your machine will show 0 until you add a command line argument this way.");
		}
		
		System.out.println("Number of characters in your command line argument: " + inputLength);
	}
}
