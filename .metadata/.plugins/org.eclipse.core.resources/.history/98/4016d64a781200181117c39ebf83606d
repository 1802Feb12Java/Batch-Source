package com.revature;

public class Q6 {
	public void run() {
		System.out.println("-2 is "+isEvenOrOdd(-125));
		System.out.println("-1 is "+isEvenOrOdd(-125));
		System.out.println("-264 is "+isEvenOrOdd(-264));
		System.out.println("-125 is "+isEvenOrOdd(-125));
	}
	
	public String isEvenOrOdd(int i) {
		if(i>2) {
			while(i>2) {
				i -= 2;	//subtract 2 from i
				//otherwise keep going in the loop
			}
		}
		else if(i<-2) {	//for negatives
			while(i<=-2) {
				i += 2;	//add 2 from i
			}
		}
		if(i==1 || i==-1) {	
			return "Odd";
		}
		else if(i==2 || i==-2) {
			return "Even";
		}
		return "Even";	//edge case for if 0 is put in
	}
}
