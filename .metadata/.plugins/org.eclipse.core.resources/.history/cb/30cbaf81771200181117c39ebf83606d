package com.revature;

public class Q6 {
	public void run() {
		System.out.println(isEvenOrOdd(-126));
	}
	
	public String isEvenOrOdd(int i) {
		if(i>0) {
			while(i>2) {
				i -= 2;	//subtract 2 from i
				if(i==1) {	
					return "Odd";
				}
				else if(i==2) {
					return "Even";
				}
				//otherwise keep going in the loop
			}
		}
		else if(i<0) {
			while(i<-2) {
				i += 2;	//subtract 2 from i
				if(i==1) {	
					return "Odd";
				}
				else if(i==-2) {
					return "Even";
				}
				//otherwise keep going in the loop
			}
		}
		return "Neither? Technically?";	//edge case for if 0 is put in
	}
}
