<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>Employee Reimbursement System</display-name>

	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>oneUserServlet</servlet-name>
		<servlet-class>com.revature.servlets.OneUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>oneUserServlet</servlet-name>
		<url-pattern>/oneuser</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logInServlet</servlet-name>
		<servlet-class>com.revature.servlets.LogInServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logInServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>sessionInfo</servlet-name>
		<servlet-class>com.revature.servlets.SessionInfo</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>sessionInfo</servlet-name>
		<url-pattern>/session</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>logoutServlet</servlet-name>
		<servlet-class>com.revature.servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>allUserServlet</servlet-name>
		<servlet-class>com.revature.servlets.AllUsersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>allUserServlet</servlet-name>
		<url-pattern>/allusers</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>oneReimbursementServlet</servlet-name>
		<servlet-class>com.revature.servlets.OneReimbursementServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>oneReimbursementServlet</servlet-name>
		<url-pattern>/onereimbursement</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>allReimbursementServlet</servlet-name>
		<servlet-class>com.revature.servlets.AllReimbursementsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>allReimbursementServlet</servlet-name>
		<url-pattern>/allreimbursements</url-pattern>
	</servlet-mapping>

</web-app>