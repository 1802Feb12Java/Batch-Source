	</servlet>
	<servlet-mapping>
		<servlet-name>totalApproved</servlet-name>
		<url-pattern>/totalapproved</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>firstName</servlet-name>
		<servlet-class>com.revature.servlets.FirstNameServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>firstName</servlet-name>
		<url-pattern>/firstname</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>updateUser</servlet-name>
		<servlet-class>com.revature.servlets.UpdateUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
